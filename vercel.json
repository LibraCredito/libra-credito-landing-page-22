{
  "buildCommand": "npm run build:critters",
  "outputDirectory": "dist",
  "installCommand": "npm ci --include=optional --legacy-peer-deps",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/images/(.*)",
      "destination": "/images/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
